{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "groupName": "all pre-commit updates",
      "managers": [
        "pre-commit"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ]
    }
  ],
  "pre-commit": {
    "enabled": true
  },
  "schedule": [
    "before 4am on the first day of the month"
  ]
}
